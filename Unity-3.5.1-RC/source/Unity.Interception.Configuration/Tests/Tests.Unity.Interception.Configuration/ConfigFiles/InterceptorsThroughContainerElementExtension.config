<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration"/>
  </configSections>

  <unity>
    <alias alias="wrappable" type="Microsoft.Practices.Unity.TestSupport.Wrappable, Unity.TestSupport" />
    <alias alias="wrappableVirtual"
      type="Microsoft.Practices.Unity.InterceptionExtension.Configuration.Tests.TestObjects.WrappableWithVirtualMethods, Unity.Interception.Configuration.Tests" />
    <alias alias="wrappableWithProperty" type="Microsoft.Practices.Unity.TestSupport.WrappableWithProperty, Unity.TestSupport" />

    <sectionExtension type="Microsoft.Practices.Unity.InterceptionExtension.Configuration.InterceptionConfigurationExtension, Microsoft.Practices.Unity.Interception.Configuration" />

    <container name="configuringDefaultInterceptorForType">
      <extension type="Interception" />

      <interceptors>
        <interceptor type="TransparentProxyInterceptor">
          <default type="wrappable"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="configuringDefaultInterceptorForTypeWithVirtualMethodInterceptor">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="VirtualMethodInterceptor">
          <default type="wrappableVirtual"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="configuringInterceptorForType">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="TransparentProxyInterceptor">
          <key type="wrappable"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="configuringInterceptorForTypeAndName">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="TransparentProxyInterceptor">
          <key type="wrappable" name="name"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="configuringSeveralInterceptors">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="TransparentProxyInterceptor">
          <key type="wrappable"/>
          <key type="wrappable" name="name"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="mixingDefaultAndNonDefaultInterceptors">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="TransparentProxyInterceptor">
          <default type="wrappable"/>
          <key type="wrappableWithProperty"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="mixingTransparentProxyAndVirtualMethodInterceptors">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="TransparentProxyInterceptor">
          <default type="wrappable"/>
        </interceptor>
        <interceptor type="VirtualMethodInterceptor">
          <key type="wrappableVirtual" name="name"/>
        </interceptor>
      </interceptors>
    </container>

    <container name="specifyingInterceptorWithTypeConverter">
      <extension type="Interception" />
      <interceptors>
        <interceptor type="TransparentProxyInterceptor" value="source value" typeConverter="Microsoft.Practices.Unity.InterceptionExtension.Configuration.Tests.TestObjects.MyTransparentProxyInterceptorTypeConverter, Unity.Interception.Configuration.Tests">
          <default type="wrappable"/>
        </interceptor>
      </interceptors>
    </container>

  </unity>
</configuration>